<h1 class="has-text-centered is-2 title mt-4">Sign up for Alpha BLog</h1>

<div class="container">
  <div class="hero p-5">
    <%= form_with(scope: :session, url: login_path) do |f| %>
      <div class="field">
        <%= f.label :email, class: "title label" %>
        <%= f.email_field :email, class: "control input", placeholder: 'Enter your email' %>
      </div>

      <div class="field">
        <%= f.label :password, class: "title label" %>
        <%= f.password_field :password, class: "control input",  placeholder: 'Enter your password'%>
      </div>
      <div class="field is-grouped">
        <%= f.submit 'Log in', class: "control button is-link" %>
        <%= link_to 'Return', articles_path, class: "control button is-link" %>
      </div>
    <% end %>
  </div>
</div>

