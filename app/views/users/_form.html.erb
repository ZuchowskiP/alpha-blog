<div class="container">
  <%= render 'shared/error', obj: @user %>
  <div class="hero p-5">
    <%= form_with(model: @user, local:true) do |f| %>
      <div class="field">
        <%= f.label :username, class: "title label" %>
        <%= f.text_field :username, class: "control input" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "title label" %>
        <%= f.email_field :email, class: "control input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "title label" %>
        <%= f.password_field :password, class: "control input" %>
      </div>
      <div class="field is-grouped">
        <%= f.submit(@user.new_record? ? 'Sign up' : 'Update account', class: "control button is-link") %>
        <%= link_to 'Return', user_path, class: "control button is-link" %>
      </div>
    <% end %>
  </div>
</div>


