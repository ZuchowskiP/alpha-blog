<h1 class="has-text-centered is-2 title mt-4">Create a new category</h1>

<div class="container">
  <%= render 'shared/error', obj: @category %>
  <div class="hero p-5">
    <%= form_with(model: @category, local:true) do |f| %>
      <div class="field">
        <%= f.label :name, "Category", class: "title label" %>
        <%= f.text_field :name, class: "control input" %>
      </div>

      <div class="field is-grouped">
        <%= f.submit  class: "control button is-link" %>
        <%= link_to 'Return', articles_path, class: "control button is-link" %>
      </div>
    <% end %>
  </div>
</div>


